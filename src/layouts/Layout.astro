---
import Link from "../components/Link.astro";
import Page from "../components/Page.astro";
import { Image } from 'astro:assets';
import myPicture from '../../public/images/me.png'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dillon Curry's personal site" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico " />
    <meta name="generator" content={Astro.generator} />
    <title>Dillon Curry - {title}</title>
  </head>
  <body>
    <nav class=" prose">
      <Image width="63" height="63" src={myPicture} alt="Picture of Dillon Curry" class="my-1" />
      <ul class="mt-0 flex items-center" >
        <li>
          <Link href="/">Home</Link>
        </li>
        <li>
          <Link href="/blog">Blog</Link>
        </li>
        <li>
          <Link href="/resume">Resume</Link>
        </li><li>
          <Link href="/contact">Contact</Link>
        </li>
      </ul>
    </nav>
    <Page>
      <slot />
    </Page>
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  :root {
    --nav-height: 72px;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Gill Sans", sans-serif;
    font-size: 18px;
    background-size: 224px;
    height: 100%;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  nav {
    text-align: right;
    margin: 0 auto;
    padding: 0 24px;
    max-width: 65ch;
    display: flex;
    justify-content: space-between;
    height: 72px;
  }

  nav li {
    display: inline-block;
    padding-left: 4px;
  }
</style>
